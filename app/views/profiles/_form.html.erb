<%= form_for(profile) do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :display_name %>
    <%= f.text_field :display_name %>
  </div>

  <div class="field">
    <%= f.label :about %>
    <%= f.text_area :about, rows: 10, cols: 60 %>
  </div>

  <div class="field">
    <%= f.label :looking_to_meet %>
    <%= f.text_area :looking_to_meet, rows: 10, cols: 60 %>
  </div>
  
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  
  <div class="field">
    <%= f.label :state, 'State/Province/Region' %>
    <%= f.text_field :state %>
  </div>
  
  <div class="field">
    <%= f.label :country %>
    <%= f.country_select :country, priority_countries: ["US"] %>
  </div>
  
  <div class="field">
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
  </div>
  
	<%= f.hidden_field :user_id %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
